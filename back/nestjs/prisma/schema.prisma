generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id Int @default(autoincrement()) @id
    username String @unique
    password String
}

model Transfers {
    id Int @default(autoincrement()) @id
    sender Int
    receiver Int
    amount Float
    return Boolean @default(false)
}

model Deposits {
    id Int @default(autoincrement()) @id
    receiver Int
    amount Float
}

model UserPermissions {
    userId Int @unique
    send Boolean
    receive Boolean
    receiveDeposit Boolean
    requestReturn Boolean
}
